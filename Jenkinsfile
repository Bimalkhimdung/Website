            steps{
                 echo 'Testing the code ....'
            }
           
        }
        stage('Build'){
        steps{
            echo 'Building Code'
        }
        

        stage('Deploy'){
            steps{
                echo 'Deploying Code'
            }
            
        }
       }
    }
}